<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateInfomation_Activity"
    android:background="@drawable/background_second"
    >
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="142dp"
            android:layout_height="87dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/nameGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/name_group"
            android:layout_toRightOf="@+id/logo"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/nameRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý"
            android:textSize="20dp"
            android:layout_below="@+id/nameGroup"
            android:layout_toRightOf="@+id/logo"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="15dp"
            />

        <Button
            android:id="@+id/button_saveInfo"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_below="@+id/logo"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_savebutton"
            android:fontFamily="@font/roboto_regular"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25dp"
            />

        <Button
            android:id="@+id/button_back"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_below="@+id/logo"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_backbuttno"
            android:fontFamily="@font/roboto_regular"
            android:text="Quay lại"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/body"
        android:layout_above="@+id/footer"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edditext_account"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/roboto_regular"
            android:hint="Tên Đăng Nhập"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/edditext_name"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_below="@id/edditext_account"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/roboto_regular"
            android:hint="Họ tên"
            android:paddingLeft="15dp" />
        <EditText
            android:layout_below="@id/edditext_name"
            android:id="@+id/edditext_email"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/roboto_regular"
            android:hint="Email"
            android:paddingLeft="15dp" />
        <EditText
            android:layout_below="@id/edditext_email"
            android:id="@+id/edditext_gender"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/roboto_regular"
            android:hint="Giới tính"
            android:paddingLeft="15dp" />
        <EditText
            android:layout_below="@id/edditext_gender"
            android:id="@+id/edditext_phone"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/roboto_regular"
            android:hint="Số điện thoại"
            android:paddingLeft="15dp" />
        <EditText
            android:layout_below="@id/edditext_phone"
            android:id="@+id/edditext_password"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/roboto_regular"
            android:hint="Mật khẩu"
            android:paddingLeft="15dp" />
        <EditText
            android:layout_below="@id/edditext_password"
            android:id="@+id/edditext_rePassword"
            android:layout_width="304dp"
            android:layout_height="52dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/roboto_regular"
            android:hint="Nhập lại mật khẩu"
            android:paddingLeft="15dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_bottm"
            />
        <TextView
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng đài hỗ trợ"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            />
        <TextView
            android:layout_marginRight="55dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1900 1234"
            android:textColor="#1587D9"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            />

    </RelativeLayout>
</RelativeLayout>